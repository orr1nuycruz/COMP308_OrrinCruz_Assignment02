<% include ../partials/header.ejs %>

<main class="container">
      <div class="jumbotron">
      <div class="row">
        <div class="col-mid-offset-3 col-md-9">
        <h1 ><%= title %></h1>
        <a href="/contact-list/add" class="btn btn-primary " role="button" aria-pressed="true">
        <i class="fa fa-plus-square"></i>Add a contact</a>
        <br>
        <table class="table table-bordered table-striped table-hover">
            <!-- Header Row-->
           
            <tr>
                <th class="text-centered">First Name</th>
                 <th class="text-centered">Last Name</th>
                 <th class="text-centered">Age</th>   
                 <th class="text-centered">Email</th>   
                 <th class="text-centered">Message</th>   
            </tr>
               
            <!-- Repeatable Template Row-->
            <% for(let count = 0; count < contactList.length; count++){ %>
                <tr>
                    
                    <td class="text-center"><%= contactList[count].firstName %></td>
                    <td class="text-center"><%= contactList[count].lastName %></td>
                    <td class="text-center"><%= contactList[count].age %></td>
                    <td class="text-center"><%= contactList[count].email %></td>
                    <td class="text-center"><%= contactList[count].message %></td>

                    <td class="text-center">
                     <a href="/contact-list/edit/<%= contactList[count]._id %>"
                     class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i>Edit</a>
                     </td>

                     <td class="text-center">
                            <a href="/contact-list/delete/<%= contactList[count]._id %>"
                            class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i>Delete</a>
                            </td>
                </tr>
         <% } %>
        </table>
    </div>
      </div>
    
   
 </main>

<% include ../partials/footer.ejs %>